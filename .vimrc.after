color vividchalk

" strip white space on save
function StripTrailingWhitespaces()
  let pos = getpos(".")
  %s/\s\+$//e
  call setpos(".", pos)
endfunction
autocmd BufWritePre * :call StripTrailingWhitespaces()

" invisibles
set list
set listchars=tab:▸\ ,eol:¬

" Command-T
let g:CommandTMaxHeight=10

set wildignore+=*.o,*.obj,.git,*.rbc,*.class,.svn,vendor/gems/*,tmp/*,spec/fixtures/cassettes/*,coverage/*
